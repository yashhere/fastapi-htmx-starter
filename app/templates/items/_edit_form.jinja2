<tr id="item-{{ item.id }}">
  <td colspan="3" class="px-6 py-4">
    <form hx-put="{{ url_for('update_item', item_id=item.id) }}"
          hx-ext="json-enc"
          hx-target="#item-{{ item.id }}"
          hx-swap="outerHTML"
          class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
        <input type="text"
               name="title"
               value="{{ item.title }}"
               required
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
        <textarea name="description"
                  rows="3"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">{{ item.description or "" }}</textarea>
      </div>
      <div class="flex space-x-2">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm">
          Save
        </button>
        <button type="button"
                hx-get="{{ url_for('cancel_edit_item', item_id=item.id) }}"
                hx-target="#item-{{ item.id }}"
                hx-swap="outerHTML"
                class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-md text-sm">
          Cancel
        </button>
      </div>
    </form>
  </td>
</tr>
